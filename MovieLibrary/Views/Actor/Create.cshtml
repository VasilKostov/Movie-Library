@using MovieLibrary.Models.Actors
@using MovieLibrary.ViewModels.ActorViewModels
@model CreateActorViewModel

<header>
    <h1 class="text-primary">Add a new actor</h1>
</header>

<hr />

<body>
    <div>
        <form asp-controller="Actor" asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="col-md-2">First name</label>
                <div class="col-md-10">
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="LastName" class="col-md-2">Last name</label>
                <div class="col-md-10">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="Gender" class="col-md-2">Gender</label>
                <select asp-for="Gender" class=" form-control" asp-items="Html.GetEnumSelectList<ActorGender>()">
                    <option disabled selected>Choose actor's gender</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <br />

            <link href="~/multiselect/example-styles.css" rel="stylesheet" />
            <div class="container">
                <h5>Choose actor's award</h5>
                <p>If you want to choose more than one press Ctrl and click on the wanted Awards</p>
            </div>
            <div class="card-body">
                <select id="dropDownList-example" name="SelectedActorAwardsIds" asp-items="@Model.AllActorAwards" multiple class="form-control"></select>
            </div>
            <br />
            <input type="submit" value="Save" class="btn btn-primary" />
            @section Scripts{
                <script src="~/multiselect/jquery.multi-select.js"></script>
                <script>
                    $(document).ready(function () {
                        $('#dropDownList-example').multiSelect();
                    });
                </script>

            }
        </form>
    </div>
</body>