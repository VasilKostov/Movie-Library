@using MovieLibrary.Models.Movies
@model List<Movie>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<header>
    <h2 class="text-primary">Movies WaitList</h2>
</header>

<hr />

<body>
    <form asp-action="Search" asp-route-viewCaller="MovieWaitlist">
        <div class="input-group">
            <input type="search" class="form-control rounded" name="data" placeholder="Search movie by Title/Producer" aria-label="Search" aria-describedby="search-addon" />
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </form>
    <br />
    <div class="p-4 border rounded">
        @if (Model.Count() > 0 && Model is not null)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Title
                    </th>
                    <th>
                        Email of the creator
                    </th>
                    <th></th>
                </tr>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>
                            @movie.Title
                            <!--Add movie poster in circle-->
                        </td>
                        <td>
                            @movie.AppUserEmail
                        </td>
                        <td>
                            <div class="text-center">
                                <a asp-action="MovieDetails" asp-route-movieId="@movie.Id" class="btn btn-info text-white">View</a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <h3>No movies to review at this moment!</h3>
        }
    </div>
</body>