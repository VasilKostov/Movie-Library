@model IEnumerable<MovieLibrary.Models.Movies.Movie>
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Waitlist </h2>
    </div>
</div>
<form asp-action="Search" asp-route-viewCaller="MovieWaitlist">
    <input type="text" name="data" placeholder="Search by Title/Producer" />
    <button type="submit" class="btn-dark">
        Search
    </button>
</form>
<div class="p-4 border rounded">
    @if (Model.Count() > 0 && Model is not null)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Title
                </th>
                <th>
                    Email of the creator
                </th>
                <th></th>
            </tr>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @movie.Title
                        <!--Add movie poster in circle-->
                    </td>
                    <td>
                        @movie.AppUserEmail
                    </td>
                    <td>
                        <div class="text-center">
                            <a asp-action="MovieDetails" asp-route-movieId="@movie.Id" class="btn btn-info text-white">View</a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <h3>No movies to review at this moment!</h3>
    }
</div>